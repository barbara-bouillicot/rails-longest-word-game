<h2>New game</h2>
<div class="wrapper d-flex w-100 justify-content-between">
<% @letters.each do |letter| %>
  <div class="letter m-3 p-3 bg-primary"><%= letter.upcase %></div>
<% end %>
</div>

<div class="form-wrapper m-3">
<p>What is the longest word you can find?</p>
<form action="/score" method="post" data-turbo="false">
  <div class="input-group mb-3">
    <input type="text" name="word" class="form-control">
    <div class="input-group-append">
    <input type="submit" value="Play" class="btn btn-light border border-dark">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @letters %>
    </div>
  </div>
</form>
</div>
</div>
